  left: 10rpx;
  top: 56rpx;
}
.steps{
  margin: auto;
  display: flex;
  justify-content:space-around;
  width: 90%;
}
.step{
  margin-top: 180rpx;
}
.num{
  color: #F96F33;
  width: 60rpx;
  height: 60rpx;
