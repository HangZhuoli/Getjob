/* pages/zhixun/zhixun.wxss */
.navbar{
  width: 100%;
  height: 500rpx;
  background: linear-gradient(to right,#FFB300,#FF8D5B);
  top: 0;
  z-index: -1;
}
.search-box{
  margin: -350rpx auto 0;
  width: 90%;
  height: 40rpx;
  background: rgb(255, 255, 255,0.32);
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  opacity: 0.63;
  border-radius: 40rpx;
  padding: 16rpx;
  color: #FFFFFF;
}
.poster{
  width: 100%;
  height: 256rpx;
  box-shadow: 0px 6rpx 12rpx rgba(0, 0, 0, 0.16);
  border-radius: 32rpx;
  margin: 20rpx auto;
}
.poster .swiper .swiper-item{
  display: flex;
  justify-items: center;
}
.mes{
  width: 90%;
  margin: 50rpx auto;
}
.work_learning{
  width: 100%;
  height: 86rpx;
  line-height: 86rpx;
  border: 2rpx solid #FFC21C;
  border-radius: 20rpx;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  background: #FFFFFF;
}
.item{
  display: inline-block;
  width: 49%;
  padding: 2rpx;
  text-align: center;
  color: #FFC21C;
}
.item-bingo{
  color: #FFFFFF;
  background: #FFC21C;
}
.work-tab{
  width: 100%;
}
.item1{
  margin-top: 20rpx;
  display: inline-block;
  width: 25%;
  height: 40rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 50rpx;
  text-align: center;
  color: #B1B1B1;
}
.item1-bingo{
  color: #000000;
  border-bottom:10rpx solid #FFC21C;
}
.item2{
