page {
  background: #F9F9F9;
}

.navbar {
  width: 100%;
  height: 160rpx;
  background: linear-gradient(to right, #FFB300, #FF8D5B);
  text-align: center;
  line-height: 150rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  position: fixed;
  top: 0;
  z-index: 1;
}

.arrow {
  position: absolute;
  left: 10rpx;
  top: 55rpx;
}

.top {
  width: 100%;
  height: 96rpx;
  margin-top: 160rpx;
  line-height: 96rpx;
  background: #FFFFFF;
}

.gold {
  display: inline-block;
  text-align: center;
  width: 50%;
  font-size: 34rpx;
  font-family: PingFang SC;
  color: #FFC21C;
}

.grey {
  display: inline-block;
  text-align: center;
  width: 50%;
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #7B7B7B;
}

.underline {
  padding: 20rpx 0 20rpx 0;
  border-bottom: 6rpx #FFAC0E solid;
}

.order {
  width: 85%;
  margin: 20rpx auto;
  background: #FFFFFF;
  box-shadow: 0px 0px 5px rgba(168, 168, 168, 0.29);
  border-radius: 14rpx;
  padding: 20rpx;
}

.name {
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #181818;
}

.toPay {
  background: #FFE1C6;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #F96F33;
  padding: 5rpx 20rpx;
  float: right;
}

.hadPay {
  background: #FFF0C6;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFC21C;
  padding: 5rpx 20rpx;
  float: right;
}

.item2 {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #414141;
}

.item2 text {
  margin: 5rpx 10rpx 5rpx 0;
}

.tap {
  background: #FFF0C6;
  border-radius: 10rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #FFC21C;
  padding: 5rpx 10rpx;
  margin-right: 10rpx;
}

.item3 {
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #181818;
}

.order1 {
  width: 90%;
  margin: 3vh auto;
  background: #FFFFFF;
  box-shadow: 0rpx 0rpx 10rpx rgba(168, 168, 168, 0.29);
  border-radius: 14rpx;
}

.interBox {
  display: flex;
}

.head {
  width: 100rpx;
  height: 100rpx;
