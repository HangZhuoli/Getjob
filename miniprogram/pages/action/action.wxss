.navbar{
  width: 100%;
  height: 260rpx;
  background: linear-gradient(to right,#FFB300,#FF8D5B);
  top: 0;
  z-index: -1;
}
.activity{
  text-align: center;
  padding: 50rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: #FFFFFF;
}
.search-box{
  margin: 0 auto 0;
  width: 90%;
  background: rgb(255, 255, 255,0.32);
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  opacity: 0.63;
  border-radius: 40rpx;
  padding: 10rpx;
  color: #FFFFFF;
}
.sort{
  margin-left: 80%;
  font-size: 28rpx;
  color: #FFB300;
}
.box{
  margin-top: 248rpx;
}
.box-item{
  width: 90%;
  border-radius: 14rpx;
  background-color: #FFFFFF;
  margin: 30rpx auto;
  border: 2rpx solid #D2D2D2;
  display:table;
  align-items: center;
}
.item-content{
  height: 100%;
  display:table-cell;
  flex-direction: column;
  justify-content: center;
  margin-left: 40rpx;
}
.shop_name{
  display: inline-block;
  color: #181818;
  margin-top: 26rpx;
  margin-left: 28rpx;
  font-weight: bold;
}
.ing{
  display: inline-block;
  margin-top: 36rpx;
  margin-left: 40rpx;
  width: 180rpx;
  height: 52rpx;
  background: #FFF0C6;
  border-radius: 8rpx;
  color: #EB4D3D;
  text-align: center;
}
.had{
  display: inline-block;
  margin-top: 36rpx;
  margin-left: 40rpx;
  width: 180rpx;
  height: 52rpx;
  background: #DDDDDD;
  border-radius: 8rpx;
  color: #7B7B7B;
  text-align: center;
}
.big_name{
  margin-left: 28rpx;
  margin-top: 2rpx;
  display: inline-block;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: #414141;
}
.work_place{
  display: inline-block;
  margin-left: 16rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: #414141;
}
.label-item{
  display: inline-block;
  background: #FFF0C6;
  border-radius: 10rpx;
  color: #FFC21C;
  margin-right: 16rpx;
  padding: 2rpx 6rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
}
.label-item:first-of-type{
  margin-left: 28rpx;
}
.date{
  margin-left: 28rpx;
  margin-top: 4rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 34rpx;
  color: #181818;
}
.desc{
  margin-left: 28rpx;
  margin-top: 4rpx;
  margin-bottom: 26rpx;
  width: 90%;
  height: 34px;
  font-size: 12px;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 17px;
  color: #878787;
}