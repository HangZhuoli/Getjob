  background: #FFFFFF;
  border: 2rpx solid #FFC21C;
  border-radius: 12rpx;
  color: #FFC21C;
  width: 70%;
  margin: 0 auto 5rpx;
}

.timetapp2 {
  background: grey;
  border: 2rpx solid #000000;
  color: #000000;
  border-radius: 12rpx;
  width: 70%;
  margin: 0 auto 5rpx;
}

.timetap {
  font-family: PingFang SC;
  font-weight: 400;
  padding: 0;
  margin: 0;
  /* color: #FFC21C; */
  position: relative;
}

.timetap:first-child::before {
  content: "";
  position: absolute;
  left: 34%;
  bottom: 0%;
  width: 30%;
  height: 2rpx;
  border-bottom: 2rpx solid #FFC21C;
  box-sizing: border-box;
}
.timetap2:first-child::before {
  content: "";
  position: absolute;
  left: 34%;
  bottom: 0%;
  width: 30%;
  height: 2rpx;
  border-bottom: 2rpx solid #000000;
  box-sizing: border-box;
}

