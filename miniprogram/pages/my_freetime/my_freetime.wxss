/* pages/calendar/calendar.wxss */
page{
  background: #FFFFFF;
}
/*导航栏*/
.navbar{
  width: 100%;
  height: 210rpx;
  background: linear-gradient(to right,#FFB300,#FF8D5B);
  text-align: center;
  line-height: 250rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  position: fixed;
  top: 0;
  z-index: 10;
}
.arrow1{
  position: absolute;
  left: 5px;
  top: 46px;
}
.month{
  margin-top: 210rpx;
}
.year-and-month{
  width: 90%;
  margin: auto;
}
.calendar{
  width: 90%;
  margin: auto;
}
.today {
  color: #FF8D5B;
}
.choice{
  border-radius: 50%;
  background: #FF8D5B;
  background-position:center;
  color: white;
}
.day{
  width: 100%;
  margin: 20rpx 0 0 0;
}
.dayy{
  width: 56rpx;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  padding: 10rpx;
  margin: 0 auto;
}
.timetapp{
  background: #FFFFFF;
  border: 2rpx solid #FFC21C;
  border-radius: 12rpx;
  width: 70%;
  margin: 0 auto 5rpx;
}
.timetap{
  font-family: PingFang SC;
  font-weight: 400;
  padding: 0;
  margin: 0;
  color: #FFC21C; 
  position: relative;
}
.timetap:first-child::before{
  content: "";
  position: absolute;
  left: 34%;
  bottom: 0%;
  width: 30%;
  height: 2rpx;
  border-bottom: 2rpx solid #FFC21C;
  box-sizing: border-box;
}
/* 非本月日期 */
.notCurrent {
  color: silver;
}
.day-hover {
  background: red;
}
.shangxia{
  text-align: center;
}
.shang,.xia{
  padding: 50rpx;
  color: #B1B1B1;
}
.black{
    color: #181818;
}
/* .arrow {
  width: 100rpx;
  color: #88a1fd;
  text-align: center;
} */
.week-row{
  width:100%;
  background-color: #FFB300;
  height: 50rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
  line-height: 50rpx;
  color: #FFFFFF;
  border-radius: 16rpx 16rpx 0 0;
}
.swpier-box {
  height: 1000rpx;
  width: 100%;
}
.days-table {
  flex-wrap: wrap;
  align-content: flex-start;
}
.grid {
  width: calc(100% / 7);
  /* height: 80rpx; */
  text-align: center;
  /* line-height: 80rpx; */
  font-size:.7rem;
}
.flex {
  display: flex;
}
/* 轴向 */
.column {
  flex-direction: column;
}
/* 主轴方向 */
.m-start {
  justify-content: flex-start;
}

.m-end {
  justify-content: flex-end;
}

.m-around {
  justify-content: space-around;
}
.m-between {
  justify-content: space-between;
}
.m-center {
  justify-content: center;
}
/* 侧轴方向 */
.s-start {
  align-items: flex-start;
}
.s-end {
  align-items: flex-end;
}

.s-around {
  align-items: space-around;
}
.s-between {
  align-items: space-between;
}
.s-center {
  align-items: center;
}
