/* miniprogram/pages/manage/verify/verify.wxss */page{
  width: 100%;
  height: 100vh;
  background-color: #F5F5F5;
}
.up,.down{
  padding: 0;
  font-size :30rpx;
  width: 120rpx!important;
  height: 74rpx;
  line-height: 74rpx;
  color: FFFFFF(255, 255, 255);
  display: inline-block;
}
.navbar{
  width: 100%;
  height: 210rpx;
  background: linear-gradient(to right,#FFB300,#FF8D5B);
  text-align: center;
  line-height: 250rpx;
  font-size: 36rpx;
  color: #FFFFFF;
  margin-bottom: 48rpx;
  position: fixed;
  top: 0;
  z-index: 10;
}
.arrow{
  position: absolute;
  left: 10rpx;
  top: 92rpx;
  width: 50rpx;
  height: 50rpx;
}
.search-box{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  position: relative;
}
input{
  width: 70%;
  height: 70rpx;
  padding-left: 30rpx;
  border-radius: 36rpx 0 0 36rpx;
  margin-left: 40rpx;
  border: 2rpx solid #FFB301;
  background-color: #FFFFFF;
  display: inline-block;
}
.btn{
  padding: 0;
  font-size :30rpx;
  width: 15%;
  height: 74rpx;
  line-height: 74rpx;
  color: #FFFFFF;
  background-color: #FFD063;
  border-radius:0 36rpx 36rpx 0;
  display: inline-block;
}
.sort{
  margin-left: 80%;
  font-size: 28rpx;
  color: #FFB300;
}
.box{
  margin-top: 248rpx;
}
.box-item{
  width: 90%;
  border-radius: 14rpx;
  background-color: #FFFFFF;
  margin: 30rpx auto;
  border: 2rpx solid #D2D2D2;
  display:table;
  align-items: center;
}
.item-content{
  height: 100%;
  display:table-cell;
  flex-direction: column;
  justify-content: center;
  margin-left: 40rpx;
}
.move-left {
  -webkit-transform: translateX(0rpx) !important;
  transform: translateX(0rpx) !important;
}
.item-delete{
  width: 20%!important;
  padding-left:40rpx!important;
  padding-right:40rpx!important;
  display:table-cell;
  justify-content: center;
  vertical-align: middle;
  border-radius: 0 14rpx 14rpx 0;
  background: #FFB301;
  color: #fff;
  font-size: 40rpx;
  margin-left: -300rpx;
  -webkit-transform: translateX(200rpx);
  transform: translateX(200rpx);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}
.shop_name{
  display: inline-block;
  color: #181818;
  margin-top: 26rpx;
  margin-left: 28rpx;
  font-weight: bold;
}
.ing{
